{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "Basic authentication microservice",
  "main": "dist/server.js",
  "license": "MIT",
  "engines": {
    "node": ">= 12.19.0"
  },
  "scripts": {
    "build": "yarn clean && tsc",
    "clean": "rimraf dist",
    "tsc": "tsc",
    "start": "yarn build && env-cmd -f .env node dist/server.js",
    "dev": "env-cmd -f .env.dev tsnd --respawn ./src/server.ts",
    "dev:debug": "env-cmd -f .env.dev tsnd --inspect=4321 --respawn src/server.ts",
    "test": "env-cmd -f .env.test jest --watchAll --no-cache --runInBand --detectOpenHandles",
    "lint": "eslint --fix ./src --ext .js,.ts"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-session": "^2.0.41",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.15",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.14.3",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "eslint": "^7.12.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "jest": "^26.6.1",
    "rimraf": "^3.0.2",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.2",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@bigoncloud/errors": "^1.0.6",
    "@bigoncloud/logger": "^1.1.4",
    "@bigoncloud/middleware": "^1.0.18",
    "bcryptjs": "^2.4.3",
    "env-cmd": "^10.1.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "joi": "^17.3.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.7",
    "pg": "^8.4.2"
  }
}
